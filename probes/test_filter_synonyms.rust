#!/usr/bin/env rust

fn test_select_synonym() {
    let nums = [1, 2, 3, 4, 5, 6];
    let evens = nums.select(x => x%2 == 0);
    let expected = [2, 4, 6];
    eq!(evens, expected);
}

fn test_chose_synonym() {
    let nums = [1, 2, 3, 4, 5, 6];
    let evens = nums.chose(x => x%2 == 0);
    let expected = [2, 4, 6];
    eq!(evens, expected);
}

fn test_that_synonym() {
    let nums = [1, 2, 3, 4, 5, 6];
    let evens = nums.that(x => x%2 == 0);
    let expected = [2, 4, 6];
    eq!(evens, expected);
}

fn test_which_synonym() {
    let nums = [1, 2, 3, 4, 5, 6];
    let evens = nums.which(x => x%2 == 0);
    let expected = [2, 4, 6];
    eq!(evens, expected);
}

fn main() {
    test_select_synonym();
    test_chose_synonym();
    test_that_synonym();
    test_which_synonym();
}
