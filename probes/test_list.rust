#!/usr/bin/env rust

fn test_slice_literal_syntax() {
    let z =@[1, 2, 3]
    put!("Slice z: {:?}\n", z)
}

fn test_slice_element_access() {
    let z =@[1, 2, 3]
    put!("First element: {}\n", z[0])
    put!("Second element: {}\n", z[1])
}

fn test_mixed_type_slice() {
    let mixed =@["hello", 42, true]
    put!("Mixed slice: {:?}\n", mixed)
}

fn test_empty_slice() {
    let empty : Vec<i32> = @[]
    put!("Empty slice: {:?}\n", empty)
}

fn main() {
    test_slice_literal_syntax();
    test_slice_element_access();
    test_mixed_type_slice();
    test_empty_slice();
}
