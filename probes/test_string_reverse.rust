#!/usr/bin/env rust
// Test string reverse method

#[test]
fn test_reverse_basic() {
    eq!("hello".reverse(), "olleh");
}

#[test]
fn test_reverse_unicode_accented() {
    eq!("cafÃ©".reverse(), "Ã©fac");
}

#[test]
fn test_reverse_chinese_characters() {
    eq!("æ—¥æœ¬èª".reverse(), "èªæœ¬æ—¥");
}

#[test]
fn test_reverse_emoji() {
    eq!("ğŸ‰ğŸŠ".reverse(), "ğŸŠğŸ‰");
}

#[test]
fn test_reverse_empty_string() {
    eq!("".reverse(), "");
}

#[test]
fn test_reverse_single_ascii_character() {
    eq!("a".reverse(), "a");
    eq!("X".reverse(), "X");
    eq!("5".reverse(), "5");
}

#[test]
fn test_reverse_single_unicode_character() {
    eq!("ä¸–".reverse(), "ä¸–");
    eq!("Ã©".reverse(), "Ã©");
    eq!("ğŸ‰".reverse(), "ğŸ‰");
}

#[test]
fn test_reverse_two_characters() {
    eq!("ab".reverse(), "ba");
    eq!("xy".reverse(), "yx");
}

#[test]
fn test_reverse_palindromes() {
    eq!("aba".reverse(), "aba");
    eq!("racecar".reverse(), "racecar");
    eq!("noon".reverse(), "noon");
}

#[test]
fn test_reverse_special_characters() {
    eq!("\n\t".reverse(), "\t\n");
    eq!("a\nb".reverse(), "b\na");
    eq!("\"'".reverse(), "'\"");
    eq!("\\//".reverse(), "//\\");
}

#[test]
fn test_reverse_mixed_unicode_and_ascii() {
    eq!("helloä¸–ç•Œ".reverse(), "ç•Œä¸–olleh");
    eq!("cafÃ©â˜•".reverse(), "â˜•Ã©fac");
    eq!("ağŸ‰bğŸŠc".reverse(), "cğŸŠbğŸ‰a");
}

#[test]
fn test_reverse_numbers_in_strings() {
    eq!("12345".reverse(), "54321");
    eq!("abc123".reverse(), "321cba");
}

#[test]
fn test_reverse_whitespace() {
    eq!("   ".reverse(), "   ");
    eq!("a b c".reverse(), "c b a");
    eq!(" leading".reverse(), "gnidael ");
    eq!("trailing ".reverse(), " gniliart");
}

fn main() {
    test_reverse_basic();
    test_reverse_unicode_accented();
    test_reverse_chinese_characters();
    test_reverse_emoji();
    test_reverse_empty_string();
    test_reverse_single_ascii_character();
    test_reverse_single_unicode_character();
    test_reverse_two_characters();
    test_reverse_palindromes();
    test_reverse_special_characters();
    test_reverse_mixed_unicode_and_ascii();
    test_reverse_numbers_in_strings();
    test_reverse_whitespace();
}
