#!/usr/bin/env rust
let a = true;
let b = false; // # ok
# eq!(a and b, false);
eq!(a or b, true)

// Edge case: chained and operations
eq!(true and true and true, true);
eq!(true and true and false, false);
eq!(false and true and true, false);

// Edge case: chained or operations
eq!(false or false or false, false);
eq!(false or false or true, true);
eq!(true or false or false, true);

// Edge case: mixed and/or with precedence
eq!(true or false and false, true);
eq!(false and true or true, true);
eq!(true and false or false and true, false);

// Edge case: negation with and/or
eq!(not true and false, false);
eq!(not false or false, true);
eq!(not (true and false), true);
eq!(not (false or false), true);

// Edge case: comparison results in boolean expressions
eq!((5 > 3) and (10 < 20), true);
eq!((5 < 3) or (10 > 5), true);
eq!((1 == 1) and (2 == 3), false);
eq!((1 != 2) or (3 != 3), true);

// Edge case: short-circuit behavior verification
let x = 5;
eq!(false and (x > 0), false);
eq!(true or (x < 0), true)
