#!/usr/bin/env rust
// String-char comparison works with direct comparison (using assert!)
assert!("a" == 'a');  // âœ… Works! Transformed to "a" == 'a'.to_string()
assert!('b' == "b");  // âœ… String/rune comparison supported!
assert!("c" != 'd');  // âœ… Inequality also works!
eq!( "a" , "a" );     // âœ… String-string comparison

// Test string concatenation and methods
eq!( "a"+"1" , "a1");
eq!( "a"+1 , "a1" );
eq!( "hi".first() , "h");
eq!( "hi".last() , "i");

// Edge cases: Empty string comparisons
assert!("" == "");
assert!("" != "a");
assert!("a" != "");

// Edge cases: Case sensitivity
assert!("A" != "a");
assert!("Hello" != "hello");
assert!("WORLD" != "world");

// Edge cases: Unicode comparisons
assert!("cafÃ©" == "cafÃ©");
assert!("cafÃ©" != "cafe");
assert!("ä¸–ç•Œ" == "ä¸–ç•Œ");
assert!("ä¸–ç•Œ" != "ä¸–");
assert!('ä¸–' == "ä¸–");
assert!('ç•Œ' == "ç•Œ");

// Edge cases: Emoji comparisons
assert!("ğŸ‰" == "ğŸ‰");
assert!("ğŸ‰" != "ğŸŠ");
assert!('ğŸ‰' == "ğŸ‰");
assert!("ağŸ‰b" == "ağŸ‰b");
assert!("ağŸ‰b" != "ağŸŠb");

// Edge cases: Special characters
assert!("\n" == "\n");
assert!("\t" != " ");
assert!("\"" == "\"");
assert!("\\" == "\\");
assert!("'" != "\"");

// Edge cases: Whitespace
assert!(" " == " ");
assert!("  " != " ");
assert!(" a" != "a");
assert!("a " != "a");
assert!("a b" != "ab");

// Edge cases: Char-to-string comparisons with special chars
assert!('\n' == "\n");
assert!('\t' == "\t");
assert!('\"' == "\"");
assert!(' ' == " ");

// Edge cases: Numbers vs strings
assert!("0" != "");
assert!("1" == "1");
assert!("10" != "1");
