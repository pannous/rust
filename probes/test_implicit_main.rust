#!/usr/bin/env rust

#[test]
fn test_implicit_main_output() {
	put!("Hello, ");
	println!("world!");

	fn helper() -> i32 {
		return 42;
	}

	put!("The answer is: ", helper());
}

#[test]
fn test_implicit_main_with_variable() {
	let x = 421;
	put!("The answer is: ", x, "\n");
}

fn main() {
    test_implicit_main_output();
    test_implicit_main_with_variable();
}
