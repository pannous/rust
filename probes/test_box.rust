#!/usr/bin/env rust

fn test_box_integer() {
    let x = box(42);
    println!("boxed value: {:?}", x);
    assert_eq!(*x, 42);
}

fn test_box_string() {
    let y = box("hello");
    println!("boxed string: {:?}", y);
    assert_eq!(*y, "hello");
}

fn test_box_vector() {
    let z = box(vec![1, 2, 3]);
    println!("boxed vec: {:?}", z);
    assert_eq!(z.len(), 3);
    assert_eq!(*z, vec![1, 2, 3]);
}

fn main() {
    test_box_integer();
    test_box_string();
    test_box_vector();
}
