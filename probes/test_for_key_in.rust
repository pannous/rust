#!/usr/bin/env rust

fn test_single_entry_map_iteration() {
    let single_map = { solo: 123 };
    let mut found = 0;
    for _k in single_map {
        found += 1;
    }
    eq!(found, 1);
}

fn test_break_immediately_in_map_iteration() {
    let map_with_data = { a: 1, b: 2, c: 3 };
    let mut break_count = 0;
    for _k in map_with_data {
        break;
        break_count += 1;
    }
    eq!(break_count, 0);
}

fn test_accumulate_values_from_array() {
    let vals = [7, 14, 21];
    let mut total = 0;
    for v in vals {
        total += v;
    }
    eq!(total, 42);
}

fn test_single_iteration_array() {
    let one_item = [555];
    let mut result = 0;
    for v in one_item {
        result = v;
    }
    eq!(result, 555);
}

fn main() {
    test_single_entry_map_iteration();
    test_break_immediately_in_map_iteration();
    test_accumulate_values_from_array();
    test_single_iteration_array();
}
