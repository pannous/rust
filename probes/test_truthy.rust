#!/usr/bin/env rust

if 0 {
    assert!(false, "0 should be falsy")
}

#[test]
fn test_zero_integer_is_falsy() {
    if 0 {
        assert!(false, "0 should be falsy")
    }
}

#[test]
fn test_positive_integer_is_truthy() {
    if 42 {
        // pass
    } else {
        assert!(false, "42 should be truthy")
    }
}

#[test]
fn test_negative_integer_is_truthy() {
    if -1 {
        // pass
    } else {
        assert!(false, "-1 should be truthy")
