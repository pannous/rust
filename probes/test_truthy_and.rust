#!/usr/bin/env rust

fn test_numeric_zero_is_falsy() {
    if 0 {
        assert!(false, "0 should be falsy")
    }
}

fn test_numeric_nonzero_is_truthy() {
    if 42 {
        // pass
    } else {
        assert!(false, "42 should be truthy")
    }
}

fn test_empty_string_is_falsy() {
    if "" {
        assert!(false, "empty string should be falsy")
    }
}

fn test_nonempty_string_is_truthy() {
    if "hello" {
        // pass
    } else {
        assert!(false, "non-empty string should be truthy")
    }
}

fn test_empty_vec_is_falsy() {
    let nilSlice: Vec<i32> = vec![];
    if nilSlice {
        assert!(false, "empty slice should be falsy")
    }
}

fn test_empty_slice_is_falsy() {
    let emptySlice: Vec<i32> = vec![];
    if emptySlice {
        assert!(false, "empty slice should be falsy")
    }
}

fn test_nonempty_slice_is_truthy() {
    nonEmptySlice := @[1, 2, 3];
    if nonEmptySlice {
        // pass
    } else {
        assert!(false, "non-empty slice should be truthy")
    }
}

fn test_true_is_truthy() {
    if true {
        // pass
    } else {
        assert!(false, "true should be truthy")
    }
}

fn test_false_is_falsy() {
    if false {
        assert!(false, "false should be falsy")
    }
}

fn test_none_option_is_falsy() {
    let nilOpt: Option<i32> = None;
    if nilOpt {
        assert!(false, "None should be falsy")
    }
}

fn test_some_option_is_truthy() {
    someOpt := Some(42);
    if someOpt {
        // pass
    } else {
        assert!(false, "Some should be truthy")
    }
}

fn test_vec_with_capacity_but_empty_is_falsy() {
    let vecWithCapacity: Vec<i32> = Vec::with_capacity(10);
    if vecWithCapacity {
        assert!(false, "Vec with capacity but empty should be falsy")
    }
}

fn test_vec_with_zero_element_is_truthy() {
    zeroVec := vec![0];
    if zeroVec {
        // pass
    } else {
        assert!(false, "vec![0] should be truthy")
    }
}

fn test_vec_with_false_element_is_truthy() {
    boolVec := vec![false];
    if boolVec {
        // pass
    } else {
        assert!(false, "vec![false] should be truthy")
    }
}

fn test_some_zero_is_truthy() {
    if Some(0) {
        // pass
    } else {
        assert!(false, "Some(0) should be truthy")
    }
}

fn test_negative_zero_is_falsy() {
    if -0 {
        assert!(false, "-0 should be falsy")
    }
}

fn test_empty_string_from_is_falsy() {
    emptyString := String::from("");
    if emptyString {
        assert!(false, "String::from(\"\") should be falsy")
    }
}

fn test_single_element_slice_is_truthy() {
    singleElemSlice := @[0];
    if singleElemSlice {
        // pass
    } else {
        assert!(false, "@[0] should be truthy")
    }
}

fn main() {
    test_numeric_zero_is_falsy();
    test_numeric_nonzero_is_truthy();
    test_empty_string_is_falsy();
    test_nonempty_string_is_truthy();
    test_empty_vec_is_falsy();
    test_empty_slice_is_falsy();
    test_nonempty_slice_is_truthy();
    test_true_is_truthy();
    test_false_is_falsy();
    test_none_option_is_falsy();
    test_some_option_is_truthy();
    test_vec_with_capacity_but_empty_is_falsy();
    test_vec_with_zero_element_is_truthy();
    test_vec_with_false_element_is_truthy();
    test_some_zero_is_truthy();
    test_negative_zero_is_falsy();
    test_empty_string_from_is_falsy();
    test_single_element_slice_is_truthy();
}
