#!/usr/bin/env rust
// Test only basic methods that don't need imports

#[test]
fn test_string_concat_basic() {
    eq!("a" + "1", "a1");
}

#[test]
fn test_string_methods_first_last() {
    eq!("hi".first(), "h");
    eq!("hi".last(), "i");
}

#[test]
fn test_string_methods_size_and_length() {
    eq!("hi".size(), 2);
    eq!("hi".length(), 2);
}

#[test]
fn test_empty_string_first_last() {
    eq!("".first(), "");
    eq!("".last(), "");
}

#[test]
fn test_empty_string_size_and_length() {
    eq!("".size(), 0);
    eq!("".length(), 0);
}

#[test]
fn test_single_character_first_last() {
    eq!("x".first(), "x");
    eq!("x".last(), "x");
}

#[test]
fn test_single_character_size_and_length() {
    eq!("x".size(), 1);
    eq!("x".length(), 1);
}

