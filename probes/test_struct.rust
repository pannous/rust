#!/usr/bin/env rust

#[derive(Clone, Copy)]
struct Tee {
    x: int,
    y: int,
}

fn sum(t: Tee) -> int {
    return t.x + t.y;
}

fn display(t: Tee) {
    put!("x:", t.x, "y:", t.y);
}

fn tee(x: int, y: int) -> Tee {
    return Tee { x, y };
}

fn test_struct_creation_and_sum() {
    let t = tee(3, 4);
    display(t);
    eq!(sum(t), 7);
}

fn main() {
    test_struct_creation_and_sum();
}
