#!/usr/bin/env rust

#[test]
fn test_or_and_precedence_true_or_false_and_false() {
    let t = true;
    let f = false;

    // t or f and f should be t or (f and f) = t or f = t
    assert!(t or f and f);
}

#[test]
fn test_and_or_precedence_false_and_true_or_true() {
    let t = true;
    let f = false;

    // f and t or t should be (f and t) or t = f or t = t
    assert!(f and t or t);
}

#[test]
fn test_comparison_with_and_operator() {
    let x = 5;
    let y = 10;

    assert!(x < y and y > 0);
}

#[test]
fn test_short_circuit_and_false_left_side() {
    // This should NOT evaluate the right side because left side is false
    let result = false and {
        unreachable!("short-circuit should prevent evaluation");
        true
    };
    assert!(!result);
}

#[test]
fn test_short_circuit_or_true_left_side() {
    // This should NOT evaluate the right side because left side is true
    let result = true or {
        unreachable!("short-circuit should prevent evaluation");
        false
    };
    assert!(result);
}

fn main() {
    test_or_and_precedence_true_or_false_and_false();
    test_and_or_precedence_false_and_true_or_true();
    test_comparison_with_and_operator();
    test_short_circuit_and_false_left_side();
    test_short_circuit_or_true_left_side();
}
