#!/usr/bin/env rust

#[test]
fn test_xor_operator_on_integers() {
    let a = 0b1010;
    let b = 0b1100;
    let result = a xor b;
    assert!(result == 0b0110);
}

#[test]
fn test_xor_operator_caret_equivalent() {
    let a = 0b1010;
    let b = 0b1100;
    assert!(a ^ b == a xor b);
}

#[test]
fn test_xor_with_true_false() {
    let t = true;
    let f = false;
    assert!(t xor f == true);
}

#[test]
fn test_xor_with_same_bool() {
    let t = true;
    assert!(t xor t == false);
}

#[test]
fn test_xor_with_false_false() {
    let f = false;
    assert!(f xor f == false);
}

#[test]
fn test_xor_zeros() {
    assert!(0 ^ 0 == 0);
}

#[test]
fn test_xor_all_ones() {
    assert!(0xFF ^ 0xFF == 0);
}

#[test]
fn test_xor_ones_with_zeros() {
    assert!(0xFF ^ 0x00 == 0xFF);
}

#[test]
fn test_xor_is_commutative_integers() {
    let a = 0b1010;
    let b = 0b1100;
    assert!(a xor b == b xor a);
}

#[test]
fn test_xor_is_commutative_bools() {
    let t = true;
    let f = false;
    assert!(t xor f == f xor t);
}

#[test]
fn test_xor_is_commutative_binary() {
    assert!(0b1010 ^ 0b0101 == 0b0101 ^ 0b1010);
}

#[test]
fn test_xor_chained_true_false_true() {
    assert!(true ^ false ^ true == false);
}

#[test]
fn test_xor_chained_true_true_true() {
    assert!(true ^ true ^ true == true);
}

#[test]
fn test_xor_chained_false_false_false() {
    assert!(false ^ false ^ false == false);
}

#[test]
fn test_xor_powers_of_two_1() {
    assert!(0b1000 ^ 0b0100 == 0b1100);
}

#[test]
fn test_xor_powers_of_two_2() {
    assert!(0b0001 ^ 0b0010 == 0b0011);
}

#[test]
fn test_xor_decimal_one_two() {
    assert!(1 ^ 2 == 3);
}

#[test]
fn test_xor_same_number_is_zero() {
    assert!(4 ^ 4 == 0);
}

#[test]
fn test_xor_self_inverse_property_binary() {
    let x = 0b10110;
    let y = 0b01101;
    assert!(x xor y xor y == x);
}

#[test]
fn test_xor_self_inverse_property_bool() {
    let t = true;
    let f = false;
    assert!(t xor f xor f == t);
}

#[test]
fn test_xor_negative_one_with_zero() {
    let neg = -1i32;
    assert!(neg xor 0 == neg);
}

#[test]
fn test_xor_negative_five_with_itself() {
    assert!((-5) xor (-5) == 0);
}
