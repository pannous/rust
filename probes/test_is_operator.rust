#!/usr/bin/env rust

#[test]
fn test_is_i32_type() {
    let mut x = 1;
    let mut ok = x is i32;
    assert!(ok);
}

#[test]
fn test_is_char_type() {
    let mut r = 'a';
    assert!(r is char);
}

#[test]
fn test_is_rune_type_alias() {
    let mut r = 'a';
    assert!(r is rune);
}

#[test]
fn test_is_string_type() {
    let mut str = "hello";
    let mut ok2 = str is String;
    assert!(ok2);
}

#[test]
fn test_is_i64_and_int_alias() {
    let y: i64 = 42;
    let mut ok3 = y is int;
    assert!(ok3);
}

#[test]
fn test_is_array_fixed_size() {
    let mut arr = [1, 2, 3];
    let mut ok4 = arr is [i32; 3];
    assert!(ok4);
}

#[test]
fn test_is_vec_type() {
    let mut vec = @[1, 2, 3];
    let mut ok5 = vec is Vec<i32>;
    assert!(ok5);
}

#[test]
fn test_is_negative_cases() {
    let mut x = 1;
    assert!(not (x is i64));
    assert!(not (x is String));
    let mut str = "hello";
    assert!(not (str is i32));
    let mut r = 'a';
    assert!(not (r is i32));
}

#[test]
fn test_is_boundary_integer_types() {
    let tiny: i8 = 127;
    let small: i16 = 32767;
    let big: i64 = 9223372036854775807;
    assert!(tiny is i8);
    assert!(small is i16);
    assert!(big is i64);
    assert!(not (tiny is i16));
    assert!(not (small is i32));
}

#[test]
fn test_is_unsigned_vs_signed() {
    let unsigned: u32 = 42;
    let signed: i32 = 42;
    assert!(unsigned is u32);
    assert!(signed is i32);
    assert!(not (unsigned is i32));
    assert!(not (signed is u32));
}

#[test]
fn test_is_float_types() {
    let f32_val: f32 = 3.14;
    let f64_val: f64 = 3.14159;
    assert!(f32_val is f32);
    assert!(f64_val is f64);
    assert!(not (f32_val is f64));
    assert!(not (f64_val is f32));
}

#[test]
fn test_is_boolean_type() {
    let flag = true;
    assert!(flag is bool);
    assert!(not (flag is i32));
}

#[test]
fn test_is_empty_string() {
    let mut empty_str = "";
    assert!(empty_str is String);
}

#[test]
fn test_is_array_size_variations() {
    let mut arr3 = [1, 2, 3];
    let mut arr4 = [1, 2, 3, 4];
    assert!(arr3 is [i32; 3]);
    assert!(arr4 is [i32; 4]);
    assert!(not (arr3 is [i32; 4]));
    assert!(not (arr4 is [i32; 3]));
}

#[test]
fn test_is_zero_values_different_types() {
    let mut zero_int = 0;
    let zero_float: f64 = 0.0;
    assert!(zero_int is i32);
    assert!(zero_float is f64);
    assert!(not (zero_int is f64));
}
