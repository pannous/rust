#!/usr/bin/env rust

#[test]
fn test_global_variable_access() {
	let globalVar = "I'm a global variable";
	assert_eq!(globalVar, "I'm a global variable");
}

#[test]
fn test_helper_function() {
	fn helper() {
		// Helper function called
	}
	helper();
	// If we got here, helper() executed successfully
}

#[test]
fn test_program_flow() {
	let globalVar = "I'm a global variable";
	fn helper() {
		// Helper function called
	}

	// Starting program...
	// Global let: I'm a global variable
	helper();
	// Done!

	// Verify the values are as expected
	assert_eq!(globalVar, "I'm a global variable");
}
